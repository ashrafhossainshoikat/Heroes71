<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/freedomfight"
    tools:context="com.example.shoikat.birsrestho.BirsresthoActivity">




    <LinearLayout
        android:id="@+id/linearLayoutHome"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7f000000"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:background="#88676767"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="বীরশ্রেষ্ঠ- ৭ জন"
            android:paddingLeft="10sp"
            android:drawableRight="@drawable/birsrestho_podok"
            android:id="@+id/textView2" />

        <Button
            android:id="@+id/buttonMohiuddin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ মহিউদ্দীন জাহাঙ্গীর"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonHamidur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ হামিদুর রহমান"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/buttonMostofaKamal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ মোস্তফা কামাল"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/buttonRuhulAmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ মোহাম্মদ রুহুল আমিন"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/buttonMotiur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ মতিউর রহমান"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/buttonMunsiAbdur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ মুন্সি আব্দুর রউফ"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonNurMohammad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ নূর মোহাম্মদ শেখ"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</RelativeLayout>
