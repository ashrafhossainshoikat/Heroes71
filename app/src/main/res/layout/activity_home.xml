<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hp"
    tools:context="com.example.shoikat.birsrestho.HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayoutHome"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7f000000"
        >

        <Button
            android:id="@+id/buttonBirsrestho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরশ্রেষ্ঠ"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonBiruttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরউত্তম"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/buttonBirbikrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরবিক্রম"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>



        <Button
            android:id="@+id/buttonBirprotik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="বীরপ্রতীক"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffff"
            style="@style/Widget.AppCompat.ActionBar.TabView"
            android:background="#88676767"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</RelativeLayout>
